# Secrets Configuration Template
# Copy this file to secrets.yaml and fill in your credentials

# iFinD (同花顺) API credentials
ifind:
  # HTTP API refresh_token (Recommended)
  # Obtain from iFinD Windows client: Tools -> refresh_token Query/Update
  # Note: Updating refresh_token invalidates the previous one
  refresh_token: "your_refresh_token_here"

  # Legacy SDK credentials (Deprecated - use refresh_token instead)
  # username: "your_username"
  # password: "your_password"
